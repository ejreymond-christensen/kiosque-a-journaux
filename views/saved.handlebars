<div class="container">
  <div id="savedArticleHolder">
    <div class="row">
      <div class="card" style= "width: 100%;">
        <div class="card-body">
          <h5 class="card-title">No current articles saved</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade noteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="notesContent">
              <p class="noteDisplay"></p>
            </div>
            <form>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Note:</label>
                <textarea class="form-control" id="note-text"></textarea>
              </div>
            </form>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger deleteNote">Delete Note</button>
          <button type="button" class="btn btn-primary subNote">Save</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="js/saved.js"></script>
